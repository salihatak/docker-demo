version: "3"
services:
  app:
    image: docker-demo
    build: .
    restart: on-failure
    env_file: ./.env
    ports:
      - "8089:8089"
    depends_on:
      - mysql-standalone

  mysql-standalone:
    image: mysql:8
    restart: unless-stopped
    env_file: ./.env
    environment:
      - MYSQL_ROOT_PASSWORD=sa
      - MYSQL_DATABASE=password  
    ports:
      - 3306:3306
    volumes:
      - db:/var/lib/mysql

volumes:
  db:
